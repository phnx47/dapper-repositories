{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    "group:monorepos",
    "workarounds:all"
  ],
  "labels": [
    "dependencies"
  ],
  "assignees": [
    "@phnx47"
  ],
  "packageRules": [
    {
      "automerge": true,
      "groupName": "coverlet packages",
      "matchSourceUrls": [
        "https://github.com/coverlet-coverage{/,}**"
      ]
    },
    {
      "automerge": true,
      "extends": [
        "monorepo:vstest",
        "monorepo:xunit-dotnet"
      ]
    }
  ]
}